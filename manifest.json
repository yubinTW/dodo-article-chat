{
  "name": "dodo article chat",
  "version": "1.0",
  "description": "chat something",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs","*://dodo.nctu.edu.tw.article/edit/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "chat-speech-bubbles_16.png",
      "32": "chat-speech-bubbles_32.png",
      "128": "chat-speech-bubbles_128.png"
    }
  },
  "icons": {
    "16": "chat-speech-bubbles_16.png",
    "32": "chat-speech-bubbles_32.png",
    "128": "chat-speech-bubbles_128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src https://cdn.firebase.com https://*.firebaseio.com https://*.gstatic.com; object-src 'self'"
}
